[Unit]
Description=Carbonio MTA proxy sidecar
Documentation=https://docs.zextras.com/
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/consul connect envoy \
    -token-file /etc/zextras/carbonio-mta/token \
    -admin-bind localhost:0 \
    -sidecar-for carbonio-mta
Restart=on-failure
RestartSec=15
User=carbonio-mta
KillMode=process
KillSignal=SIGKILL
LimitNOFILE=65536
TimeoutSec=120
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target